max=int(input("please enter maximum value: "))
evensum=0
oddsum=0
for num in range(1,max+1):
    if (num%2==0):
        evensum=evensum+num
    else:
        oddsum=oddsum+num
print("The sum of Even numbers 1 to {0} = {1}".format(num,evensum))
print("The sum of odd numbers 1 to {0} = {1}".format(num,oddsum))
